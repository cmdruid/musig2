{
  "compilerOptions": {
    "baseUrl": "..",
    "paths": {
      "@cmdcode/musig2"         : [ "src/index.js"   ],
      "@cmdcode/musig2/assert"  : [ "src/assert.js"  ],
      "@cmdcode/musig2/context" : [ "src/context.js" ],
      "@cmdcode/musig2/keys"    : [ "src/keys.js"    ],
      "@cmdcode/musig2/sign"    : [ "src/sign.js"    ],
      "@cmdcode/musig2/util"    : [ "src/util.js"    ],
      "@cmdcode/musig2/verify"  : [ "src/verify.js"  ],
    },
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [ "node_modules" ],
  "include": [ "**/*.ts" ]
}
